#Remove Odd Numbers From List

def remove_odd(list):
    L = list[:]  #makes copy of list
    for item in L:
        if item >= 2 and item %2 == 1:
            L.remove(item)
        elif item == 1:
            L.remove(item)
        for item in L:
            if item >=2 and item %2 == 1:
                L.remove(item)
            elif item == 1:
                L.remove(item)
    return(L)


